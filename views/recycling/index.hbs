<h1>
  {{title}}
</h1>
{{#if user}}
{{!-- Add links to CRUD operations --}}
<a href="/projects/add">Add a new recycling object</a>
{{/if}}

{{!-- To Show data --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Object Name</th>
    <th>Object EcoScore</th>
    <th>Disposal Method</th>
    <th>Username</th>
    <th></th>
  </thead>
  {{#each dataset}}
  <tr>
    <td>{{this.objectName}}</td>
    <td>{{this.objectEcoScore}}</td>
    <td>{{this.objectDisposalMethod}}</td>
    <td>{{this.profile_id}}</td>
    {{!-- When inside of a loop, you need to navigate out of it using '../' --}}
    {{#if this.profile_id}}
        <td><a href="/recycling/edit/{{this._id}}"
          class="btn btn-primary">Edit</a>
            <a href="/recycling/delete/{{this._id}}"
          class="btn btn-danger"
            onclick="return confirmDeletion();">Delete</a></td>
    {{/if}}
  </tr>
  {{/each}}
</table>


{{#each dataset}}

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="http://localhost:3000/image/{{this.file}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">Object: {{this.objectName}}</h5>
        <h6 class="card-title">EcoScore: {{this.objectEcoScore}}</h6>
        <p class="card-text">Description: {{this.objectDescription}}</p>

        <a href="#" class="btn btn-primary">Go somewhere</a>
        <hr>
        {{#if this.profile_id}}
            <td><a href="/recycling/edit/{{this._id}}"
                   class="btn btn-primary">Edit</a>
                <a href="/recycling/delete/{{this._id}}"
                   class="btn btn-danger"
                   onclick="return confirmDeletion();">Delete</a></td>
        {{/if}}
    </div>
</div>

{{/each}}